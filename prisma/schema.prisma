// Prisma schema for Kuuslauk Restaurant
// To use: npx prisma generate && npx prisma db push

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Admin users for restaurant management
model AdminUser {
  id               Int       @id @default(autoincrement())
  email            String    @unique @db.VarChar(255)
  passwordHash     String    @map("password_hash") @db.VarChar(255)
  name             String?   @db.VarChar(255)
  resetToken       String?   @map("reset_token") @db.VarChar(255)
  resetTokenExpiry DateTime? @map("reset_token_expiry")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @default(now()) @updatedAt @map("updated_at")

  @@index([resetToken])
  @@map("admin_users")
}

// Site settings for logo, contact info, etc.
model SiteSettings {
  id             Int      @id @default(autoincrement())
  logoUrl        String?  @map("logo_url") @db.Text
  restaurantName String   @default("KÜÜSLAUK") @map("restaurant_name") @db.VarChar(255)
  address        String?  @db.VarChar(255)
  phone          String?  @db.VarChar(50)
  email          String?  @db.VarChar(255)
  mapLink        String?  @map("map_link") @db.Text
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("site_settings")
}

// Menu categories (Appetizers, Main Course, etc.)
model Category {
  id        Int        @id @default(autoincrement())
  slug      String     @unique @db.VarChar(100)
  nameEn    String     @map("name_en") @db.VarChar(255)
  nameEt    String     @map("name_et") @db.VarChar(255)
  nameRu    String     @map("name_ru") @db.VarChar(255)
  sortOrder Int        @default(0) @map("sort_order")
  createdAt DateTime   @default(now()) @map("created_at")
  menuItems MenuItem[]

  @@map("categories")
}

// Menu items with multilingual support
model MenuItem {
  id            Int         @id @default(autoincrement())
  categorySlug  String?     @map("category_slug") @db.VarChar(100)
  nameEn        String      @map("name_en") @db.VarChar(255)
  nameEt        String      @map("name_et") @db.VarChar(255)
  nameRu        String      @map("name_ru") @db.VarChar(255)
  descriptionEn String?     @map("description_en") @db.Text
  descriptionEt String?     @map("description_et") @db.Text
  descriptionRu String?     @map("description_ru") @db.Text
  price         Decimal     @db.Decimal(10, 2)
  imageUrl      String?     @map("image_url") @db.Text
  isSpicy       Boolean     @default(false) @map("is_spicy")
  isExtraSpicy  Boolean     @default(false) @map("is_extra_spicy")
  isVegan       Boolean     @default(false) @map("is_vegan")
  isActive      Boolean     @default(true) @map("is_active")
  sortOrder     Int         @default(0) @map("sort_order")
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @default(now()) @updatedAt @map("updated_at")
  category      Category?   @relation(fields: [categorySlug], references: [slug], onDelete: SetNull)
  orderItems    OrderItem[]

  @@index([categorySlug])
  @@index([isActive])
  @@map("menu_items")
}

// Special offers (daily/weekly deals)
model Offer {
  id            Int      @id @default(autoincrement())
  titleEn       String   @map("title_en") @db.VarChar(255)
  titleEt       String   @map("title_et") @db.VarChar(255)
  titleRu       String   @map("title_ru") @db.VarChar(255)
  descriptionEn String?  @map("description_en") @db.Text
  descriptionEt String?  @map("description_et") @db.Text
  descriptionRu String?  @map("description_ru") @db.Text
  originalPrice Decimal  @map("original_price") @db.Decimal(10, 2)
  discountPrice Decimal  @map("discount_price") @db.Decimal(10, 2)
  offerType     String   @default("daily") @map("offer_type") @db.VarChar(50)
  validFrom     DateTime @map("valid_from") @db.Date
  validUntil    DateTime @map("valid_until") @db.Date
  imageUrl      String?  @map("image_url") @db.Text
  isActive      Boolean  @default(true) @map("is_active")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @default(now()) @updatedAt @map("updated_at")

  @@index([isActive])
  @@index([validFrom, validUntil])
  @@map("offers")
}

// Customer orders
model Order {
  id            Int         @id @default(autoincrement())
  orderNumber   String      @unique @map("order_number") @db.VarChar(50)
  customerName  String      @map("customer_name") @db.VarChar(255)
  customerPhone String      @map("customer_phone") @db.VarChar(50)
  customerEmail String      @map("customer_email") @db.VarChar(255)
  total         Decimal     @db.Decimal(10, 2)
  pickupTime    String?     @map("pickup_time") @db.VarChar(50)
  paymentMethod String      @default("cash") @map("payment_method") @db.VarChar(20)
  notes         String?     @db.Text
  status        String      @default("pending") @db.VarChar(50)
  notifiedAt    DateTime?   @map("notified_at")
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @default(now()) @updatedAt @map("updated_at")
  items         OrderItem[]

  @@index([status])
  @@index([createdAt(sort: Desc)])
  @@map("orders")
}

// Individual items within an order
model OrderItem {
  id           Int       @id @default(autoincrement())
  orderId      Int       @map("order_id")
  menuItemId   Int?      @map("menu_item_id")
  itemName     String    @map("item_name") @db.VarChar(255)
  quantity     Int       @default(1)
  price        Decimal   @db.Decimal(10, 2)
  proteinChoice String?  @map("protein_choice") @db.VarChar(100)
  specialNotes String?   @map("special_notes") @db.Text
  createdAt    DateTime  @default(now()) @map("created_at")
  order        Order     @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItem     MenuItem? @relation(fields: [menuItemId], references: [id], onDelete: SetNull)

  @@index([orderId])
  @@map("order_items")
}

// Table reservations
model Reservation {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(255)
  email     String   @db.VarChar(255)
  phone     String   @db.VarChar(50)
  date      DateTime @db.Date
  time      String   @db.VarChar(10)
  guests    Int      @default(1)
  menu      String?  @db.VarChar(50) // a-la-carte, lunch-menu, dinner-menu
  notes     String?  @db.Text
  status    String   @default("pending") @db.VarChar(20) // pending, confirmed, cancelled, completed
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@index([status])
  @@index([date])
  @@index([createdAt(sort: Desc)])
  @@map("reservations")
}
